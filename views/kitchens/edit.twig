<div class="flex flex-col items-center justify-center w-full rounded-lg overflow-hidden">
    <form method="POST" class="flex flex-col w-full h-full justify-center items-center">
        <table class="w-7/12 leading-normal h-7/12 h-70">
            <thead>
                <tr>
                    <th>
                        Edit {{ kitchen.name }}
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="px-5 py-3 border-gray-200 text-left font-semibold text-gray-600">
                        <label for="nameEditKitchen">Name</label>
                        <input name="nameEditKitchen" id="nameEditKitchen" class="p-3 block w-full text-sm text-gray-900 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" type="text" value="{{kitchen.name}}">
                    </td>
                </tr>
                <tr>
                    <td class="px-5 py-5 border-gray-200 text-left font-semibold text-gray-600">
                    <label for="descriptionEditKitchen">Description</label>
                            <textarea name="descriptionEditKitchen" id="descriptionEditKitchen" class="h-40 block p-1 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                                {{ kitchen.description }}
                            </textarea>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="flex flex-row-reverse">
            <input type="submit" name="editKitchen" onclick="location.href='/kitchen/show?id={{tutorial.id}}'"
                    class="flex cursor-pointer bg-blue-500 hover:bg-blue-700 text-white font-bold p-2 px-4 rounded-full"
                    value="Edit changes!">
            </input>   
        </form>
        <button class="flex bg-blue-500 hover:bg-blue-700 text-white font-bold p-2 px-4 rounded-full"><a href="/kitchen">Back</a></button>
    </div>
</div>