<section class="mt-10">
  <div class="px-6 h-full text-gray-800">
    <div
      class="flex xl:justify-center lg:justify-between justify-center items-center flex-wrap h-full g-6">
      <form method="POST">
        <div class="flex flex-col items-center justify-center">
        <h1 class="text-2xl py-2"> Login </h1>
          <!-- Email input -->
          <div class="mb-6">
            <input
              type="text"
              class="form-control block w-full px-4 py-2 text-xl font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
              id="exampleFormControlInput2"
              placeholder="username"
              name="username";
            />
          </div>

          <!-- Password input -->
          <div class="mb-6">
            <input
              type="password"
              class="form-control block w-full px-4 py-2 text-xl font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
              id="exampleFormControlInput2"
              placeholder="Password"
              name="password";
            />
          </div>

          <div class="text-center flex-col justify-center lg:text-left">
            {% if error is defined %}
                <p class="text-red-500 text-lg mb-4"> {{error}} </p>
            {% endif %}
            <input
              type="submit"
              class="text-sm text-indigo-50 transition duration-150 hover:bg-indigo-500 bg-indigo-600 text-white font-semibold py-2 px-4 rounded-r"
              name="login"
              value="Login"
            >
            <p class="text-sm text-center font-semibold mt-2 pt-1 mb-0">
              <a
                href="/user/register"
                class="text-blue-600 hover:text-red-700 focus:text-red-700 transition duration-200 ease-in-out"
                >Register</a
              >
            </p>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>